/*This program will find the largest of the three numbers
entered by the user. One condition is that all numbers must be unique.*/

/*PROGRAM GOES HERE...*/

#include<stdio.h>
void main(){
        int a,b,c;
        printf("Enter 3 numbers:\n");
        printf("Enter number 1: ");
        scanf("%d",&a);
        printf("Enter number 2: ");   /* 3 numbers entered by the user */
        scanf("%d",&b);
        printf("Enter number 3: ");
        scanf("%d",&c);
        if(a>b && a>c){
            printf("Number 1 is largest");
        }
        else if(b>a && b>c){
            printf("Number 2 is largest");
        }
        else{
            printf("Number 3 is largest");
        }

    }



